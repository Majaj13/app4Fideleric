<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app4Fideleric.Vues.ParametreVue"
             Title="Paramètres Utilisateur"
             Padding="10">

    <StackLayout Spacing="20">

        <Label Text="Paramètres Utilisateur" 
               FontSize="Large"
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

        <StackLayout>
            <Label Text="Nom"/>
            <Entry x:Name="NomEntry"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Prénom"/>
            <Entry x:Name="PrenomEntry"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Email"/>
            <Entry x:Name="EmailEntry" Keyboard="Email"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Téléphone"/>
            <Entry x:Name="TelephoneEntry" Keyboard="Telephone"/>
        </StackLayout>

        <StackLayout>
            <Label Text="Date de Naissance"/>
            <DatePicker x:Name="DateNaissancePicker"/>
        </StackLayout>

        <Button Text="Mettre à jour"
                Clicked="OnUpdateButtonClicked"
                HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>